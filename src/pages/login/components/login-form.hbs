<form class="form">
    {{> components/form/form__header title="Авторизация"}}
    <div class="form__body">
        {{> components/form/form__input name="login" isRequired="true" placeholder="Логин"}}
        {{> components/form/form__input name="password" type="password" isRequired="true" placeholder="Пароль"}}
    </div>
    <div class="form__footer">
        {{> components/button/link class="button_primary" to="../chats/" text="Войти"}}
        {{> components/button/link text="Создать аккаунт" to="../registration/"}}
    </div>
</form>